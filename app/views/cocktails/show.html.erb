  
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.theflavorbender.com/wp-content/uploads/2015/10/Witch-Heart-Halloween-Cocktail-The-Flavor-Bender-Featured-Image-SQ-3-480x270.jpg">
  <div class="container">
    <h1>Find all the ingredients you need <strong>to create</strong> the <strong>best cocktails</strong>!</h1>
    <br>
  </div>
</div>
  <div class="container">

  

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3><%= @cocktail.name %> Recipe </h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
      <br>
      <%= link_to "Back to all cocktails", root_path, class: "btn-ghost"%>
    </div>
  </div>
</div>

